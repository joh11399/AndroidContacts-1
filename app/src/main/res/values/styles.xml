<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
	</style>

	<style name="contact_text_view">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:paddingRight">0dp</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingLeft">0dp</item>
		<item name="android:paddingBottom">8dp</item>
	</style>

	<style name="contact_view_label" parent="contact_text_view">
		<item name="android:gravity">end</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold|italic</item>
	</style>

	<style name="contact_view_text" parent="contact_text_view">
		<item name="android:gravity">end</item>
		<item name="android:paddingTop">0dp</item>
		<item name="android:textSize">28sp</item>
	</style>

	<style name="separator">
		<item name="android:layout_height">1dip</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:background">#FFFFFFFF</item>
	</style>

	<style name="contact_edit_label" parent="contact_text_view">
		<item name="android:paddingBottom">0dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold|italic</item>
	</style>

	<style name="contact_edit_edit" parent="contact_text_view">

	</style>

</resources>
